<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/layout_product_name_text_view"
                  android:layout_width="230dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Salami de mayita induveca"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/layout_product_name_text_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="999"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/layout_product_name_text_view"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/remove_button_text_view"
            android:layout_gravity="left"
            android:background="@android:drawable/editbox_background"
            android:clickable="true"
            android:contextClickable="true"
            android:enabled="true"
            android:gravity="center"
            android:text="Remove"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

</LinearLayout>